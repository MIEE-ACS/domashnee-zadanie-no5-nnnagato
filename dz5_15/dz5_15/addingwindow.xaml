<Window x:Class="dz5_15.addingwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dz5_15"
        mc:Ignorable="d"
        Title="Добавление записи" Height="450" Width="800">
    <Grid>
        <Label Content="Новый артикул" Margin="35,95,621,313"/>
        <TextBox x:Name="articulBox" Margin="35,0,621,267" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom"/>
        <Label Content="Новый размер" HorizontalAlignment="Center" Margin="0,95,0,0" VerticalAlignment="Top" Width="144"/>
        <TextBox x:Name="sizeBox" HorizontalAlignment="Center" Margin="0,149,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="144"/>
        <Label Content="Новая цена" HorizontalAlignment="Right" Margin="0,95,35,313" Width="144"/>
        <TextBox x:Name="priceBox" Margin="621,0,35,267" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom"/>
        <Button x:Name="acceptButton" Content="Добавить" HorizontalAlignment="Left" Margin="100,291,0,0" VerticalAlignment="Top" Width="221" Click="acceptButton_Click"/>
        <Button x:Name="denyButton" Content="Отменить" Margin="472,291,100,0" VerticalAlignment="Top" Click="denyButton_Click"/>

    </Grid>
</Window>
